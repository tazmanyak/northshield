elif strmatch(*agapite*,<args>)
	return <eval 03e9>
elif strmatch(*silver*,<args>)
	return <eval 07d1>
elif strmatch(*mytheril*,<args>)
	return <eval 051f>
elif strmatch(*verite*,<args>)
	return <eval 07d1>
elif strmatch(*valorite*,<args>)
	return <eval 0515>
elif strmatch(*bloodrock*,<args>)
	return <eval 04c2>
elif strmatch(*blackrock*,<args>)
