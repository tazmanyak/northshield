[function iscancast]
if !<isempty <args>>
	if strmatch(i_scroll*,<args>)
		if strmatch(<args>,i_scroll_paralyze_field)
			local.spell=s_paralyzation_field
		else
			local.spell=s_<strsub 9 99 <args>>
		endif
		if !<cancast <local.spell>>
			return 0
		else
			return 1
		endif
	endif
endif

