// SCRIPT DOCUMENTATION
// --------------------
// foodcheck (function)
// - returns the cliloc used to display the foodtype
[FUNCTION foodcheck]
IF (<isempty <ARGV[0]>>)
return 3000340
ELIF  (<STREAT <ARGV[0]>>== t_meat_raw)
return 1049564
ELIF ((<STREAT <ARGV[0]>>== t_fruit) || (<STREAT <ARGV[0]>>== t_crops))
return 1049565
ELIF ((<STREAT <ARGV[0]>>== t_grass) || (<STREAT <ARGV[0]>>== t_grain))
return 1049566
ELSE
return 3000340
ENDIF

