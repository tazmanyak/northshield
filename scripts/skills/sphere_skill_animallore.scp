DEFNAME=SKILL_ANIMAL_LORE
KEY=AnimalLore
TITLE=Scholar
PROMPT_MSG=@,,2 500328
DELAY=2.0
//ADV_RATE=2.5,50.0,200.0
//ADV_RATE=0,0,0
//ADV_RATE=1.0,1.0,1.0
STAT_STR=0
STAT_INT=70
STAT_DEX=0
BONUS_STR=0
BONUS_DEX=0
BONUS_INT=100
BONUS_STATS=50

on=@wait
if <def.scp.NewSkills_AnimalLore> == 1
sysmessage @,,1 Hangi npcyi incelemek istiyorsunuz ?
targetf f_animallore_start
f_skill_delay <getargv 0 <def.skill.2.waittime>>
return 1
endif

on=@select
f_skill_delay <getargv 0 <def.skill.2.waittime>>

on=@success
f_skill_delay <getargv 1 <def.skill.2.waittime>>

ON=@fail
f_skill_delay <getargv 2 <def.skill.2.waittime>>
sysmessage <def.scp.animallore_fail>

[function f_animallore_start]
if !<argo.npc>
	skill fail
	action -1
	return 1
endif
if <skillusequick animallore <r60>>
	if <argo.brain>
	argo.f_resenddialog d_animal_lore
	skillgain animallore <eval (<animallore> / 10) + 1>
	f_skill_delay <getargv 1 <def.skill.2.waittime>>
	return 1
	endif
endif
f_skill_delay <getargv 2 <def.skill.2.waittime>>
skillgain animallore <eval (<animallore> / 7) + 1>
sysmessage <def.scp.animallore_fail>


