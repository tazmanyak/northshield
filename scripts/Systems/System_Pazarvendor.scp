		cont.say <src.targ.name>, degeri <src.targ.price> gp olarak belirlendi.
	endif
elseif (<more1> == 2) // satis
	var.smsgx 0481
	if !(<src.targ.topobj.uid> == <cont.uid>)
	elseif (strmatch('<src.targ.price>',''))
