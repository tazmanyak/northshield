[itemdef i_vampire_converter_anim]
ID=i_gold
name Vampir Converter
TYPE=t_eq_script

ON=@EQUIP
timer 1
more2 5

on=@timer
if (<eval <more2>> == 5)
	cont.anim 31
	timer 1
	more2 --
	return 1
elif (<eval <more2>> == 4)
	cont.anim 31
	timer 1
	more2 --
	return 1
elif (<eval <more2>> == 3)
	cont.anim 31
	timer 1
	more2 --
	return 1
elif (<eval <more2>> == 2)
	cont.anim 31
	timer 1
	more2 --
	return 1
elif (<eval <more2>> == 1)
	cont.anim 31
	timer 1
	more2 --
	return 1
elif (<eval <more2>> == 0)
	cont.anim 31
	cont.sysmessage @69,,1 Hedefe virus bulastirildi.
	remove
	return 1
endif
////////////////////////////////////////////////////////////////////////////////////////

[itemdef i_vampir_sayaci]
ID=i_gold
name Vampir Sayaci
TYPE=t_eq_script

ON=@EQUIP
timer 60*60

on=@timer
if <cont.isonline>
	cont.tag0.vampir_yas ++
	cont.tag0.vampir_aclik_seviyesi --
	cont.anim 32
	cont.message @32,,1 Aclik seviyeniz degisti.
if (<eval <cont.tag0.vampir_aclik_seviyesi>> == 0)
	cont.hits 0
	cont.message @32,,1 Acliktan oldun. Acilen kan bulman lazim...
	cont.tag0.vampir_aclik_seviyesi 1
endif

endif
timer 60*60
return 1



