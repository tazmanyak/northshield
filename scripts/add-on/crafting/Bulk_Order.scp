[FUNCTION BULKITEMSELECTTAILOR]
IF !(<ARGN1>)
	IF !(<R3>)
		FOR 4
		MORE2 ++
		SETBULKTAILOREASY 0 <LOCAL._FOR>
		ENDFOR
	NAME=Large Bulk Order Deed
	ELSE
	SETBULKTAILOREASY 0 1
	MORE2=1
	ENDIF
ELSE
	IF (<SRC.TAILORING> >= 70.0) && (<eval <src.tag.craft_puan>> >= 100)
	LOCAL.RAND=50
	ELSE
	LOCAL.RAND=70
	ENDIF
	IF (<R100> > <LOCAL.RAND>)
		FOR 4
		MORE2 ++
		SETBULKTAILOREASY 0 <LOCAL._FOR>
		ENDFOR
	NAME=Large Bulk Order Deed
	ELSE
		IF (<R2>)
			DORAND 2
			SETBULKTAILOREASY 0 1
			SETBULKTAILORHARD 1
			ENDDO
		MORE2=1
		ELSE
			FOR 4
				DORAND 3
				SETBULKTAILORHARD <LOCAL._FOR>
				SETBULKTAILOREASY 0 <LOCAL._FOR>
				SETBULKTAILORHARD <LOCAL._FOR>
				ENDDO
			MORE2 ++
			NAME=Large Bulk Order Deed
			ENDFOR
		ENDIF
		IF !(<R3>)
		MOREY=1
		ENDIF
	ENDIF
ENDIF

