	IF (<SRC.BLACKSMITHING> >= 70.0) && (<eval <src.tag.craft_puan>> >= 100)
	LOCAL.RAND=50
	ELSE
	LOCAL.RAND=70
	ENDIF
	IF (<R100> > <LOCAL.RAND>)
		IF !(<R2>)
			FOR 4
			MORE2 ++
			SETBULKBSEASY 0 <LOCAL._FOR>
			ENDFOR
		NAME=Large Bulk Order Deed
		ELSE
		SETBULKBSEASY 0 1
		MORE2=1
		ENDIF
	ELSE
		IF (<R3>)
		CALL SETBULKBSEASY 1 1
		MORE2=1
		ELSE
			FOR 4
			CALL SETBULKBSEASY 1 <dLOCAL._FOR>
			MORE2 ++
			ENDFOR
		NAME=Large Bulk Order Deed
		ENDIF
		IF !(<R3>)
		MOREY=1
		ENDIF
	ENDIF
ENDIF

