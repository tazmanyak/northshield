[FUNCTION BULKITEMSELECTBS]
IF !(<ARGN1>)
	IF !(<R3>)
		FOR 4
		MORE2 ++
		SETBULKBSEASY 0 <LOCAL._FOR>
		ENDFOR
		NAME=Large Bulk Order Deed
